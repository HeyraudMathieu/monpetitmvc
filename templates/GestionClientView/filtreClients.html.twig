{# empty Twig template #}
{% extends "layout.html.twig" %}
{% import '/imports/elements.html' as elements %}
{% block contenu %}
    <div class="container">
        <u><h2>Recherche selon critères</h2></u>
        <form action="index.php?c=gestionClient&a=rechercheClients" method="post">
            <div class="form-group">
                {{ elements.list("titreCli", titres, "titre", "titres") }}
                {{ elements.list("cpCli", cps, "cp", "cps") }}
                {{ elements.list("villeCli", villes, "ville", "villes") }}
            </div>
            <button type="submit" class="btn btn-default">Voir</button>
            {% if criteres %}
                <h4> Critères : 
                    {% for critere in criteres %}
                        {{ critere }} - 
                    {% endfor %}
                </h4>
                {% if tousClients %}
                    {{ include('/blocks/arrayClients.html.twig') }}
                {% else %}
                    <h5> Aucun client trouvé pour ces critères</h5>
                {% endif %} 
            {% endif %}
        </form>
    </div>
{% endblock %}
{% block footer %}
    {{ parent() }}
{% endblock %}